<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/iv_head_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/common_icon_no_network"
        android:scaleType="fitXY"/>


    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_head_img"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/iv_head_img">

        <TextView
            android:id="@+id/tv_nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:gravity="left"
            android:maxLines="1"
            android:textColor="@color/common_color_333333"
            android:textSize="15sp"
            tools:text="昵称"/>

        <TextView
            android:id="@+id/tv_user_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:alpha="0.5"
            android:paddingLeft="8dp"
            android:paddingTop="2dp"
            android:paddingRight="8dp"
            android:paddingBottom="2dp"
            android:textColor="@color/common_color_333333"
            android:textSize="10sp"
            tools:text="普通用户"/>


    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_head_img"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@+id/iv_head_img">

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingRight="8dp"
            android:text="中国"
            android:textColor="@color/common_color_999999"
            android:textSize="12sp"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="12dp"
            android:layout_gravity="center"
            android:background="@color/common_color_999999"/>

        <TextView
            android:id="@+id/tv_fans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:maxLines="1"
            android:text="粉丝:0"
            android:textColor="@color/common_color_999999"
            android:textSize="12sp"/>

    </android.support.v7.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/tv_follow"
        android:layout_width="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:text="关注"
        android:textColor="@color/common_color_999999"
        android:textSize="13sp"/>


    <View
        android:layout_marginTop="10dp"
        android:background="@color/common_color_333333"
        android:layout_below="@+id/iv_head_img"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

</RelativeLayout>